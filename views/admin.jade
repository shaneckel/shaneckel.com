doctype 5
html(lang="en")
  head
    meta(charset='utf-8')
   
    title Admin Section
   
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='author', content='Shane Eckel')
   
    link(rel='stylesheet', type='text/css', href='//cloud.typography.com/6038632/763602/css/fonts.css')
    link(href='../css/admin.css', rel='stylesheet')
    script(src="../js/angular.js")
    script(src="../js/todo.js")
  
  body#todos(ng-app="scotchTodo")
    
    header(ng-controller="mainController")
      p Welcome #{user.username}, you have {{ todos.length }} things to do.
      p.logout
        a(href="/admin/logout") logout
      
    article.todo(ng-controller="mainController")
      section.information
        div#todo-form
          form
            input(type="text" placeholder="Whatcha got to do..." ng-model="formData.text")
            button(type="submit" ng-click="createTodo()") add

      section.item(ng-repeat="todo in todos | orderBy:['text' ]" ng-class="({{todo.done }}==true) ? 'done' : ''")
        div.check(ng-click="updateTodo(todo._id, todo.done, todo.text )")
          p {{todo.text }}
        div.delete(ng-click="deleteTodo(todo._id)") X
           
    footer
      p #{user.username}, you'll still have {{ todos.length }} things to do. No matter how far you scroll.
      p.logout
        a(href="/admin/logout") logout  